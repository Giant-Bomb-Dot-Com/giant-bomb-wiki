}}

{{#show:{{FULLPAGENAME}}
  |?Has release date
  |format=list
  |link=none
  |default=
  |intro=<dt>Release date</dt><dd>
  |outro=</dd>
}}

{{#show:{{FULLPAGENAME}}
  |?Has manufacturer
  |format=list
  |link=all
  |default=
  |intro=<dt>Manufacturer</dt><dd>
  |outro=</dd>
}}

{{#show:{{FULLPAGENAME}}
  |?Has original price
  |format=list
  |link=none
  |default=
